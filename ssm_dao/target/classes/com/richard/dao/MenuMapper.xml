<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.richard.dao.MenuMapper">
    <resultMap id="menuResult" type="com.richard.domain.Menu">

        <id column="id" property="id"></id>
        <result column="href" property="href"></result>
        <result column="icon" property="icon"></result>
        <result column="name" property="name"></result>
        <result column="parent_id" property="parentId"></result>
        <result column="description" property="description"></result>
        <result column="orderNum" property="order_num"></result>
        <result column="shown" property="shown"></result>
        <result column="created_time" property="createdTime"></result>
        <result column="updated_time" property="updatedTime"></result>
        <result column="created_by" property="createdBy"></result>
        <result column="updated_by" property="updatedBy"></result>
        <collection property="subMenuList" ofType="com.richard.domain.Menu" select="findSubMenuListByPid" column="id">
        </collection>
    </resultMap>

    <!--查询所有父子菜单信息-->
    <select id="findSubMenuListByPid" parameterType="java.lang.Integer" resultMap="menuResult">
        SELECT * FROM menu WHERE parent_id = #{pid}
    </select>


    <select id="findAllMenu" resultType="com.richard.domain.Menu">
        SELECT * FROM menu
    </select>

    <select id="findMenuById" parameterType="java.lang.Integer" resultType="com.richard.domain.Menu">
        SELECT * FROM menu where id=#{id}
    </select>
</mapper>